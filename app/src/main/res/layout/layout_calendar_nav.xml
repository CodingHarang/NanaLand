<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/rlHeaderCalendar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/dateTitlePaddingBottom">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <com.nanaland.util.daterangecalendar.customviews.CustomTextView
            android:id="@+id/tvYearTitle"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:tag="dateTitle"
            android:text="0"
            android:textColor="@color/main"
            android:textSize="@dimen/text_size_title" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgVNavLeft"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/apple_neo_sb"
                android:src="@drawable/ic_back" />


            <com.nanaland.util.daterangecalendar.customviews.CustomTextView
                android:id="@+id/tvMonthTitle"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:tag="dateTitle"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_title"
                android:fontFamily="@font/apple_neo_b"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgVNavRight"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_next" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>